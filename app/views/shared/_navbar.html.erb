<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= action_name == 'home' ? 'clear' : '' %>">
  <%= link_to "#", class: "navbar-brand" do %>
    <div class="avatar">
      <%= image_tag "cherry2.png", class: "avatar-img" %>
      <h1 class="firstheading"> CherryPickr </h1>
    </div>
  <% end %>
  <% unless params[:action] == "home" %>
    <div class="searchbar">
      <%= form_tag products_path, method: :get do %>
        <%= text_field_tag :product,
          params[:product],
          class: "no-border",
            #do we need an only
          # class: "form-control",
          placeholder: "Enter Product"
        %>
      <% end %>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
 <!--        <li class="nav-item">
          <%#= link_to "Messages", "#", class: "nav-link" %>
        </li> -->
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <div class="links">
            <%= link_to "Sign In", new_user_session_path %>
            <%= link_to "Sign Up", new_user_registration_path %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>



