
<div class="product-container">
  <div class="left-section">
    <h1> Your Product in Your Area</h1>


    <div class="product-show-card">
      <div class="product-show-details">
        <div class="product-show-header mb-4">
          <h2><%= @product.name %></h2>
        </div>
        <h5><%= @product.supermarket.name %></h5>
        <h5><%= @product.price %></h5>
        <br>
        <div class="flex-box mt-5">
        <button type="button" class="btn product-show-button" data-toggle="modal" data-target="#exampleModalLong">
          Create a Price Alert!
        </button>
        <%= link_to "Get Directions", supermarket_path(@product.supermarket), class: "btn" %>
      </div>
      </div>
      <%= image_tag @product.image, alt: "alttext", class: "product-show-image" %>
    </div>
<!-- Button trigger modal -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= @product.name %></h5>
            <button type="button" class="close, border-radius=12px" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% if @product.user_products.map { |e| e.id }.include?(current_user.id) %>
              I am already on your <%= link_to "watchlist", user_path(current_user), class: "btn" %>!
              <br>
              You can find me at your nearest <%= link_to '@product.supermarket.name', supermarket_path(@product.supermarket) %>, but I will let you know when I get cheaper!
            <% else %>
              You can find me at your nearest <%= @product.supermarket.name %>, or click
              <%= render "user_products/form" %>
               to get notified when my price changes!
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="right section mr-5">
    <div class="top sub-section">

      <h4><strong>Other Supermarkets</strong></h4>
      <div class="other-products">
        <% @other_ones.each do |other| %>
          <div class="other-product">
            <%= link_to product_path(other) do %>
              <div class="details ml-2 mt-2">
                <h5><strong><%= other.supermarket.name %></strong></h5>
                <p><strong><%= other.price %></strong></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back to all products", products_path, class: "btn" %>

