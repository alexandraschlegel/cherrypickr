
<div class="product-container">
  <div class="left-section">
    <h1> Your Product in Your Area
    <%= image_tag @product.image, alt: "alttext" %>
    <h2><%= @product.name %></h2>

    <div class="">
      <h5><%= @product.supermarket.name %></h5><p><%= @product.price %></p>
    </div>
<!-- Button trigger modal -->
    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModalLong">
      Create a Price Alert!
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= @product.name %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% if @product.user_products.map { |e| e.id }.include?(current_user.id) %>
              I am already on your <%= link_to "watchlist", user_path(current_user), class: "btn" %>!
              <br>
              You can find me at your nearest <%= @product.supermarket.name %>, but I will let you know when I get cheaper!
            <% else %>
              You can find me at your nearest <%= @product.supermarket.name %>, or click
              <%= render "user_products/form" %>
               to get notified when my price changes!
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="right section">
    <div class="top sub-section">
      <h4>Other Supermarkets:</h4>
      <% @other_ones.each do |f| %>
        <h6><%= f.supermarket.name %></h6>
        <p><%= f.price %></p>
      <% end %>
    </div>
  </div>
</div>
