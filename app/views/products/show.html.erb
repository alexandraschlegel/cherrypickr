<div class="product-container">
  <div class="left-section">
    <h1> Your Product in Your Area
<%= image_tag @product.image, alt: "alttext" %>
      <h2><%= @product.name %></h2>
      <p><%= @product.price %></p>
<!-- Button trigger modal -->
        <button type="button" class="btn" data-toggle="modal" data-target="#exampleModalLong">
          Get Price alert
        </button>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                ...
              </div>
              <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Search for more</button>
            </div>
            </div>
          </div>
        </div>
  </div>
  <div class="right section">
    <div class="top sub-section">
    </div>
  </div>
</div>




