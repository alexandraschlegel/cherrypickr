<div class="container">
  <div>
    <h1 style="margin-left: 20px; margin-top: 20px; margin-bottom: 25px">Your Products</h1>
  </div>
  <div class="row">
    <% @products.each do |product| %>
      <% product = product[1].sort_by{|p| p.price_cents}[0] %>
      <div class="col-md-3">
        <div class="card-index mb-3 p-3" style="border-radius:10px">
          <%= image_tag product.image, alt: "alttext", class: "prod-img" %>
            <p class="mb-2" style="width: 170px"><%= product.name%></p>
            <p class="mb-2" style="width: 170px"><%= product.supermarket.name%></p>
            <p><strong>Price from:</strong> <strong><%=product.price%></strong>
            <div>
              <%= link_to "View Details", product_path(product), class: "btn btn-primary rounded mt-3"%>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>


