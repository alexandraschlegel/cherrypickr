<div class="container">
  <div>
    <h1 style="margin-left: 20px; margin-top: 20px; margin-bottom: 25px">Your Products</h1>
  </div>
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card-trip mb-3 p-3" style="border-radius:10px">

        <% if product.image.attached? %>
          <%= cl_image_tag product.image.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2 class="mb-2" style="width: 170px"><%= product.name%></h2>
            <p><strong>Description:</strong><%= product.description %></p>
            <p><strong>Size:</strong><%= product.size %></p>
            <p><strong>Price from:</strong> <% product.price%>
            <% end %>
            <div>
              <%= link_to "View Details", product_path(product), class: "btn btn-primary rounded mt-3"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
