<section class="results">
  <div class="container">
    <div>
      <h3>Your Products</h3>
    </div>
    <div class="row">
      <% @products.each do |product| %>
        <% product = product[1].sort_by{|p| p.price_cents}[0] %>
        <div class="col-md-3 col-sm-12">
            <div class="results__card">

              <%= image_tag product.image, alt: "alttext", class: "prod-img mb-3 mt-3 ml-2" %>
                <p class="text-center mb-2 ml-5" style="width: 170px"><%= product.name%></p>
    <!--             <p class="mb-2" style="width: 170px"><%= product.supermarket.name%></p> -->
                <p class="text-center" ><strong>Price from:</strong> <strong><%=product.price%></strong>
                <div class="text-center">
                  <%= link_to "View Prices", product_path(product), class: "btn btn-primary rounded mr-5"%>
                </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<div class="inner_footer">

</div>



