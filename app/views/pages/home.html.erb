<div class="container">
  <div class="header">
    <h4> GET YOUR PRICE ALERT NOW </h4>
  </div>

  <div class="searchbox">
    <%= form_tag products_path, method: :get do %>

    <%= text_field_tag :product,
      params[:product],
      class: "form-control",
      placeholder: "Enter Product"
    %>

      <div class="flexbox">
        <%= text_field_tag :postcode,
            params[:postcode],
            class: "form-a",
            placeholder: "Enter Postcode"
        %>

        <%= text_field_tag :range,
            params[:range],
            class: "form-b",
            placeholder: "Enter range"
        %>
      </div>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  </div>
</div>

<% end %>







